<krpano version="1.17.4">

	<!-- the skin -->
	<include url="skin/defaultskin.xml" />
  <include url="plugins/showtext.xml" />

	<!-- view settings -->
	<view hlookat="0" vlookat="0" maxpixelzoom="1.0" fovmax="150" limitview="auto" />


	<preview url="Cafeteria.tiles/preview.jpg" />

	<image>
		<cube url="Cafeteria.tiles/pano_%s.jpg" />
		<mobile>
			<cube url="Cafeteria.tiles/mobile_%s.jpg" />
		</mobile>
	</image>

	<hotspot name="cafeteria"
           ath="-117.25324838617138"
           atv="-2.705953406430874"
           url="plugins/sensor-128.png"
           alpha="0.4"
           scale="0.7"
           zoom="true"
           onhover="set(alpha,1.0);showtext(get(sensorTable));"
           onclick="set(alpha,1.0);showtext(get(sensorTable), mobile);"
           onout="set(alpha,0.4);"
  />

</krpano>
